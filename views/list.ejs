<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Looo logs</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/components/reset.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/components/container.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/components/table.min.css">
  <style>
  @import url('https://fonts.googleapis.com/css?family=Roboto:300,400,700');
  body, html{
    font-family: Roboto;
  }
  .ui.table{
    border-radius: 0px;
  }
  h1{
    font-weight: 300;
    font-size: 3em;
  }
  table tr.level-log td:nth-child(1){
    border-left: 2px solid #9bc53d;
  }
  table tr.level-info td:nth-child(1){ 
    border-left: 2px solid #5bc0eb;
  }
  table tr.level-warn td:nth-child(1){ 
    border-left: 2px solid #fde74c;
  }
  table tr.level-error td:nth-child(1){
    border-left: 2px solid #e55934;
  }
</style>
</head>
<body>
  <br>
  <div class="ui container">    
    <h1>looo logs</h1>
    <table class="ui striped table">
      <thead>
        <tr>
          <th>Type</th>
          <th>Content</th>
          <th>Created</th>
        </tr>
      </thead>
      <% logs.forEach((log) => { %>
      <tr class="level-<%= log.level %>">
        <td><%= log.level %></td>
        <td>
          <% log.data.forEach((logData) => { %>
          <pre><%= JSON.stringify(logData, null, 2) %></pre>
          <% }) %>
        </td>
        <td><%= log.created %></td>
      </tr>
      <% }) %>
    </table>
  </div>

</body>
</html>